---
import settings from "../../content/ustawienia.json";
import { ClientRouter, ViewTransitions } from "astro:transitions";
import LoadingIndicator from "astro-loading-indicator/component";
import { ThemeScript, Toggle } from "astro-theme-toggle/components";
import { Image } from "astro:assets";

const assets = import.meta.glob("/src/assets/**/*", { eager: true });
const resolveAsset = (path) => {
  if (!path) return null;
  const entry = assets[`/src${path}`];
  return entry?.default ?? null;
};

export function getStaticPaths() {
  const entries = import.meta.glob('../../content/osobistosci/*.json', { eager: true });
  return Object.entries(entries).map(([file, entry]) => {
    const slug = file.split('/').pop().replace('.json', '');
    return {
      params: { slug },
      props: { osoba: { slug, ...entry.default } },
    };
  });
}

const { osoba } = Astro.props;
const osobaImage = resolveAsset(osoba?.zdjecie);
const logoAsset = resolveAsset(settings.logo);

if (!osoba) {
  return Astro.redirect('/osobistosci');
}
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{osoba.tytul_wpisu ?? osoba.slug} - {settings.siteTitle}</title>
    <meta name="description" content={settings.metaDescription} />
    <ClientRouter />
    <ViewTransitions />
    <LoadingIndicator color="var(--accent)" height="3px" animationDuration={400} threshold={200} />
    <ThemeScript />
    <style>
      :root {
        color-scheme: light;
        --bg: #f3f5f7;
        --ink: #0f172a;
        --muted: #475569;
        --accent: #2563eb;
        --card: rgba(255, 255, 255, 0.8);
        --border: rgba(15, 23, 42, 0.12);
        --glow: rgba(37, 99, 235, 0.18);
      }
      html.dark {
        --bg: #0b1220;
        --ink: #e2e8f0;
        --muted: #94a3b8;
        --accent: #60a5fa;
        --card: rgba(15, 23, 42, 0.8);
        --border: rgba(148, 163, 184, 0.18);
        --glow: rgba(96, 165, 250, 0.2);
      }
      body {
        font-family: "Space Grotesk", "Segoe UI", sans-serif;
        margin: 0;
        padding: 40px 24px 80px;
        background: var(--bg);
        color: var(--ink);
      }
      .menu {
        display: flex;
        gap: 16px;
        padding: 10px 14px;
        border-radius: 999px;
        background: var(--card);
        border: 1px solid var(--border);
        backdrop-filter: blur(10px);
        width: 100%;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
      }
      .menu a {
        color: var(--ink);
        text-decoration: none;
        font-weight: 600;
        padding: 6px 10px;
        border-radius: 999px;
        transition: background 160ms ease, color 160ms ease;
      }
      .menu-links {
        display: flex;
        gap: 16px;
        align-items: center;
      }
      .menu img {
        display: block;
        width: auto;
      }
      .logo {
        height: 28px;
        width: auto;
      }
      .menu a:hover {
        background: rgba(176, 122, 58, 0.15);
        color: var(--accent);
      }
      .wrap {
        max-width: 900px;
        margin: 0 auto;
      }
      header {
        margin-bottom: 24px;
      }
      .back {
        display: inline-block;
        margin-bottom: 26px;
        text-decoration: none;
        color: var(--muted);
      }
      .header {
        display: grid;
        gap: 24px;
        grid-template-columns: minmax(200px, 320px) 1fr;
        align-items: start;
      }
      .photo {
        width: 100%;
        border-radius: 16px;
        border: 1px solid var(--border);
        background: #efe6da;
        object-fit: cover;
        aspect-ratio: 5 / 5;
        height: 100%
      }
      .photo.placeholder {
        display: grid;
        place-items: center;
        color: var(--muted);
        font-size: 12px;
        letter-spacing: 0.04em;
        text-transform: uppercase;
      }
      h1 {
        margin: 0 0 6px;
        font-family: "Clash Display", "Times New Roman", serif;
        font-size: 42px;
      }
      .subtitle {
        margin: 0 0 12px;
        font-size: 18px;
        color: var(--muted);
      }
      .section {
        margin-top: 28px;
        padding-top: 18px;
        border-top: 1px solid var(--border);
      }
      .section h2 {
        margin: 0 0 8px;
        font-size: 20px;
      }
      .section p {
        margin: 0;
        line-height: 1.6;
        color: var(--muted);
      }
      .quote {
        margin: 0;
        padding: 16px 20px;
        background: var(--card);
        border-radius: 14px;
        border: 1px solid var(--border);
        font-style: italic;
        color: var(--ink);
      }
      footer {
        margin-top: 56px;
        color: var(--muted);
      }
      @view-transition {
        navigation: auto;
      }
      ::view-transition-old(root) {
        animation: fade-out 500ms ease;
      }
      ::view-transition-new(root) {
        animation: fade-in 500ms ease;
      }
      @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      @keyframes fade-out {
        from { opacity: 1; }
        to { opacity: 0; }
      }
      @media (max-width: 800px) {
        .header {
          grid-template-columns: 1fr;
        }
      }
    </style>
    <style is:global>
      :root .astro-loading-indicator {
        top: 0;
        z-index: 2000;
      }
    </style>
  </head>
  <body>
    <main class="wrap">
      <header>
        <nav class="menu">
          <a href="/">
            {logoAsset ? (
              <Image src={logoAsset} alt={settings.siteTitle} class="logo" />
            ) : (
              settings.siteTitle
            )}
          </a>
          <div class="menu-links">
        <a href="/osobistosci/">Osobistosci</a>
        <Toggle style="width: 22px; height: 22px;" />
      </div>
        </nav>
      </header>
      <a class="back" href="/osobistosci/">&larr; Wróć do listy</a>
      <section class="header">
        {osobaImage ? (
          <Image class="photo" src={osobaImage} alt={osoba.tytul_wpisu ?? osoba.slug} />
        ) : (
          <div class="photo placeholder">Brak zdjecia</div>
        )}
        <div>
          <h1>{osoba.tytul_wpisu ?? osoba.slug}</h1>
          {osoba.tytul_naukowy ? (
            <p class="subtitle">{osoba.tytul_naukowy}</p>
          ) : null}
          {osoba.stanowisko ? <p class="subtitle">{osoba.stanowisko}</p> : null}
        </div>
      </section>

      {osoba.biografia ? (
        <section class="section">
          <h2>Biografia zawodowa</h2>
          <p>{osoba.biografia}</p>
        </section>
      ) : null}

      {osoba.osiagniecia ? (
        <section class="section">
          <h2>Najważniejsze osiągnięcia</h2>
          <p>{osoba.osiagniecia}</p>
        </section>
      ) : null}

      {osoba.wklad_branza ? (
        <section class="section">
          <h2>Wkład w rozwój branży</h2>
          <p>{osoba.wklad_branza}</p>
        </section>
      ) : null}

      {osoba.motto ? (
        <section class="section">
          <h2>Motto</h2>
          <p class="quote">"{osoba.motto}"</p>
        </section>
      ) : null}
      <footer>{settings.footerText}</footer>
    </main>
  </body>
</html>
