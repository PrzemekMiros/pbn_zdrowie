---
import BaseLayout from "../../layouts/BaseLayout.astro";

const contact = {
  title: "Kontakt",
  lead: "Napisz albo zadzwoń i opowiedz o projekcie. Wrócę z odpowiedzią w 24-48h.",
  email: "kontakt@przemekmiros.pl",
  phone: "+48 788 660 190",
  address: "ul Orzeszkowej 5, 05-660 Warka",
  hours: "Pn - Pt: 9.00-17.00",
  mapUrl: "https://maps.google.com/?q=Przykladowa+12+Miasto",
};
---

<BaseLayout
  title="Kontakt"
  description="Napisz lub zadzwon, opowiedz o projekcie i otrzymaj odpowiedz w 24-48h."
>
  <section class="pb-24 pt-24 grid gap-10 lg:grid-cols-[minmax(0,1fr)_minmax(0,1fr)] lg:gap-12">
    <div class="space-y-6">
      <div class="space-y-2">
        <p class="max-w-xl font-semibold text-3xl">
          Opisz krótko potrzeby, termin i budżet
        </p>
        <p class="max-w-xl text-base text-[var(--muted)]">
          Jeśli masz brief, link do inspiracji albo obecnej strony,
          podaj je w wiadomości. Odezwę się z propozycją dalszych kroków, wstępną wyceną oraz planem działań.
        </p>
      </div>
      <div class="space-y-4">
        <div class="rounded-2xl border border-[var(--border)] bg-[#fbfbff] px-5 py-6">
          <p class="text-xs uppercase tracking-[0.2em] text-[var(--muted)]">Email</p>
          <a class="mt-3 block text-lg text-[var(--text)]" href={`mailto:${contact.email}`} title="Napisz email">
            {contact.email}
          </a>
        </div>
        <div class="rounded-2xl border border-[var(--border)] bg-[#fbfbff] px-5 py-6">
          <p class="text-xs uppercase tracking-[0.2em] text-[var(--muted)]">Telefon</p>
          <a class="mt-3 block text-lg text-[var(--text)]" href={`tel:${contact.phone.replace(/\s/g, "")}`} title="Zadzwon">
            {contact.phone}
          </a>
        </div>
        <div class="rounded-2xl border border-[var(--border)] bg-[#fbfbff] px-5 py-6">
          <p class="text-xs uppercase tracking-[0.2em] text-[var(--muted)]">Lokalizacja</p>
          <p class="mt-3 text-base text-[var(--text)]">{contact.address}</p>
        </div>
        <div class="rounded-2xl border border-[var(--border)] bg-[#fbfbff] px-5 py-6">
          <p class="text-xs uppercase tracking-[0.2em] text-[var(--muted)]">Dostępność</p>
          <p class="mt-3 text-base text-[var(--text)]">{contact.hours}</p>
        </div>
      </div>
    </div>

    <div class="rounded-2xl border border-[var(--border)] bg-[#fbfbff] p-6 lg:sticky lg:top-8">
      <form class="mt-6 grid gap-4" id="contactForm">
        <div class="grid gap-3 sm:grid-cols-2">
          <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-name">
            Imię i nazwisko
            <input
              id="contact-name"
              class="w-full box-border rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
              name="form-name"
              type="text"
              placeholder="Jan Kowalski"
              required
            />
          </label>
          <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-email">
            Email
            <input
              id="contact-email"
              class="w-full box-border rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
              name="form-mail"
              type="email"
              placeholder="jan@firma.pl"
              required
            />
          </label>
        </div>
        <div class="grid gap-3 sm:grid-cols-2">
          <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-phone">
            Telefon
            <input
              id="contact-phone"
              class="w-full box-border rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
              name="form-phone"
              type="tel"
              placeholder="+48 123 456 789"
            />
          </label>
          <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-company">
            Firma (opcjonalnie)
            <input
              id="contact-company"
              class="w-full box-border rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
              name="form-company"
              type="text"
              placeholder="Nazwa firmy"
            />
          </label>
        </div>
        <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-service">
          Usługa
          <input
            id="contact-service"
            class="w-full box-border rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
            name="form-service"
            type="text"
            placeholder="Co chcesz zrealizować?"
          />
        </label>
        <label class="grid gap-2 text-sm font-semibold text-[var(--muted)]" for="contact-message">
          Wiadomość
          <textarea
            id="contact-message"
            class="w-full box-border min-h-[140px] rounded-xl font-normal border border-[var(--border)] bg-[#fff] px-4 py-3 text-base text-[var(--text)]"
            name="form-message"
            placeholder="Napisz, czego potrzebujesz i jaki jest termin."
            required
          ></textarea>
        </label>
        <button
          class="mt-2 inline-flex w-full items-center justify-center rounded-full bg-[var(--accent)] px-6 py-3 text-sm font-semibold text-white transition hover:brightness-95"
          type="submit"
        >
          Wyślij wiadomość
        </button>
        <p id="contact-form-status" class="mt-3 text-sm text-[var(--muted)]" aria-live="polite"></p>
      </form>
    </div>
  </section>
</BaseLayout>
