---
const { title, lead } = Astro.props;
---

<section class="relative pt-42 pb-20">
    <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 bg-black"></div>
  <div class="relative space-y-4">
    <p class="text-xs font-semibold text-[var(--accent)]">Strona główna | Realizacje</p>
    <h1 class="text-4xl font-semibold tracking-tight text-white sm:text-5xl">
      {title}
    </h1>
    {lead ? <p class="max-w-2xl text-base text-gray-400">{lead}</p> : null}
  </div>
</section>
