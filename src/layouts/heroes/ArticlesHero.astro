---
import shape31 from "../../assets/images/sections/hero-bg.webp";

const { title, lead, tags, date } = Astro.props;
const formattedDate = date ? new Date(date).toLocaleDateString('pl-PL', {
  year: 'numeric',
  month: '2-digit',
  day: '2-digit'
}) : null;
---

 
<section class="relative pt-42 pb-16">
  <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 bg-gray-100">
   <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 overflow-hidden">
    <img
      src={shape31.src}
      alt=""
      class="grayscale-[0.5] sepia-10"
      loading="lazy"
      decoding="async"
    />
   </div>
  </div>
  <div class="relative space-y-4 mx-auto max-w-2xl">
        <div class="text-[8px] md:text-[10px] uppercase tracking-[0.1em] text-gray-400 mb-3 md:mb-6 font-semibold">
        <span>Główna</span>
        <span class="text-[var(--accent)]"> > </span>
        <span class="text-gray"> {title}</span>
      </div>
    <h1 class="text-2xl sm:text-3xl/4 md:text-4xl lg:text-5xl font-semibold tracking-tight text-black">
      {title}
    </h1>

  <div class="max-w-2xl">

  <div class="flex flex-wrap gap-x-8 gap-y-2 pt-4 mt-4 border-t border-white/15 font-semibold text-[8px] md:text-[10px] tracking-[0.15em] uppercase">
    {tags && tags.length > 0 && (
      <div class="text-gray-400">
        Kategoria <span class="text-[var(--accent)]"> > </span> <span class="text-gray">{tags[0]}</span>
      </div>
    )}
    {formattedDate && (
      <div class="text-gray-400 hidden md:block">
        Opublikowano <span class="text-[var(--accent)]"> > </span> <span class="text-black/50">{formattedDate}</span>
      </div>
    )}
    <!--
    <div class="text-gray-400">
      4 minuty czytania
    </div>
     -->
  </div>
</div>

  </div>
</section>
