---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/sections/hero-pge.png";
const { title, lead, meta } = Astro.props;
const { site, url } = Astro;
const baseUrl = site ? site.toString().replace(/\/$/, "") : "";
const homeUrl = baseUrl ? `${baseUrl}/` : "/";
const currentUrl = baseUrl ? new URL(url.pathname, baseUrl).toString() : url.pathname;
---

<section class="relative">
  <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2">
   <div class="pointer-events-none absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 overflow-hidden">
    <Image
      src={heroImage}
      alt=""
      class="h-full w-full object-cover"
      sizes="100vw"
      widths={[640, 960, 1280, 1600, 1920]}
      loading="lazy"
      decoding="async"
    />
   </div>
    <div class="absolute inset-0 bg-black/60"></div>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-[minmax(0,1.66fr)_minmax(0,1fr)] relative">
    <div class="relative flex flex-col justify-center pb-18 pt-32 md:pb-18 md:pt-46 z-10">
      <nav
        class="text-[8px] md:text-[10px] uppercase tracking-[0.1em] text-gray-300 mb-3 md:mb-4 font-semibold"
        aria-label="Breadcrumb"
        itemscope
        itemtype="https://schema.org/BreadcrumbList"
      >
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a href={homeUrl} itemprop="item" class="hover:text-white">
            <span itemprop="name">Główna</span>
          </a>
          <meta itemprop="position" content="1" />
        </span>
        <span class="text-[var(--accent2)]"> > </span>
        <span itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <meta itemprop="item" content={currentUrl} />
          <span itemprop="name">
            {title}
          </span>
          <meta itemprop="position" content="2" />
        </span>
      </nav>
      <h1 class="text-3xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold leading-[1.1] text-white tracking-tight max-w-2xl">
        {title}
      </h1>
    </div>
  </div>
</section>

  <section class="relative py-5 border-b border-gray-200">
    {meta ? (
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[var(--accent)]">{meta}</p>
    ) : (
      <div class="flex flex-wrap items-center gap-x-6 gap-y-2 md:mb-0">
        <span class="text-[10px] mt-1 md:mt-0 text-gray-400 uppercase font-bold tracking-tighter">Średnia opinia w </span>
        
        <div class="flex items-center gap-3">
          <span class="text-xl font-black text-[#002B49] tracking-tighter">Google</span>
          <div class="flex items-center gap-1">
            <div class="flex text-orange-400 text-xs">★★★★★</div>
            <span class="text-gray-900 font-bold text-xs ml-1">5.0</span>
          </div>
        </div>

        <span class="text-[11px] text-gray-500 font-medium hidden sm:block">
          w tworzeniu stron www
        </span>
      </div>
    )}

  </section>
