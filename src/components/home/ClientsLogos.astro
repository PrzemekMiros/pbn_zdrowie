---
import { Image } from "astro:assets";

const logoEntries = import.meta.glob("/src/content/klienci/img/*", { eager: true });
const logos = Object.entries(logoEntries)
  .map(([path, entry]) => {
    const src = entry?.default ?? null;
    if (!src) return null;
    const label = path.split("/").pop().replace(/\.[^.]+$/, "");
    return { src, label };
  })
  .filter(Boolean)
  .sort((a, b) => a.label.localeCompare(b.label, "pl-PL"));
---

<section class="relative overflow-hidden bg-white pb-24 pt-20">
  <div class="relative flex flex-col gap-6 sm:flex-row sm:items-end sm:justify-between">
    <div class="space-y-3 max-w-3xl">
      <p class="text-[12px] font-semibold uppercase tracking-[0.1em] text-[var(--accent)]">Zaufail mi</p>
      <h2 class="text-3xl font-semibold tracking-tight text-black sm:text-4xl">Pomogłem już ponad 40 firmom zbudować silną obecność w sieci, <span class="text-black/50"> realnie zwiększyć ich zasięgi i zrealizowac cele</span></h2>
    </div>
        <div class="text-left">
          <div class="mb-1 flex text-[var(--accent)]">
              <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
          </div>
          <p class="text-sm font-bold text-black">
            4.8 Ocena <span class="ml-2 font-normal text-gray-600">10+ Opinii</span>
          </p>
        </div>
  </div>
  <div class="mt-10 grid gap-4 text-center sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6">
    {logos.map((logo) => (
      <div class="flex items-center justify-center border border-gray-300 rounded-md px-6 py-4">
        <Image
          class="max-h-16 w-auto object-contain grayscale opacity-90 transition hover:opacity-100"
          src={logo.src}
          alt={logo.label}
          loading="lazy"
          width={200}
          height={64}
        />
      </div>
    ))}
  </div>
</section>
