---
import { Image } from "astro:assets";

const logoEntries = import.meta.glob("/src/content/klienci/img/*", { eager: true });
const logos = Object.entries(logoEntries)
  .map(([path, entry]) => {
    const src = entry?.default ?? null;
    if (!src) return null;
    const label = path.split("/").pop().replace(/\.[^.]+$/, "");
    return { src, label };
  })
  .filter(Boolean)
  .sort((a, b) => a.label.localeCompare(b.label, "pl-PL"));
---

<section class="relative overflow-hidden bg-white pb-20 pt-20 md:pb-24 md:pt-20">
  <div class="relative flex flex-col gap-6 md:flex-row md:items-end md:justify-between">
    <div class="space-y-3 max-w-3xl">
      <p class="text-[12px] font-semibold uppercase tracking-[0.1em] text-[var(--accent)]">Poznaj moich klientów</p>
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold tracking-tight text-black">Pomogłem już ponad 40 firmom zbudować silną obecność w sieci, <span class="text-black/50"> realnie zwiększyć ich zasięgi i zrealizowac cele</span></h2>
    </div>
        <div class="text-left">
          <div class="mb-1 flex text-[var(--accent)]">
              <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>
          </div>
          <p class="text-sm font-bold text-black">
            5/5 Ocena <span class="ml-2 font-normal text-gray-600">15+ Opinii</span>
          </p>
        </div>
  </div>
  <div
    class="mt-10 grid gap-2 md:gap-4 text-center grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6"
    itemscope
    itemtype="https://schema.org/ItemList"
  >
    <meta itemprop="name" content="Klienci" />
    <meta itemprop="itemListOrder" content="https://schema.org/ItemListOrderAscending" />
    <meta itemprop="numberOfItems" content={String(logos.length)} />
    {logos.map((logo, index) => (
      <div
        class="flex items-center justify-center border border-gray-300 rounded-md px-6 py-5"
        itemprop="itemListElement"
        itemscope
        itemtype="https://schema.org/ListItem"
      >
        <meta itemprop="position" content={String(index + 1)} />
        <div itemprop="item" itemscope itemtype="https://schema.org/Organization">
          <meta itemprop="name" content={logo.label} />
          <Image
            class="max-h-16 w-auto object-contain grayscale opacity-90 transition hover:opacity-100"
            src={logo.src}
            alt={logo.label}
            loading="lazy"
            width={200}
            height={64}
            itemprop="logo"
          />
        </div>
      </div>
    ))}
  </div>
</section>
