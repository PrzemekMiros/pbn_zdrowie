---
const works = [
  {
    title: "Portal kobiet biznesu",
    tag: "Strona wizerunkowa",
    year: "2024",
    image: "/src/content/realizacje/img/business-thumb-big.jpg",
  },
  {
    title: "C7Med Centrum Rehabilitacji",
    tag: "Healthcare",
    year: "2023",
    image: "/src/content/realizacje/img/c7med-thumb-big.jpg",
  },
  {
    title: "EcoTech Solutions",
    tag: "B2B",
    year: "2024",
    image: "/src/content/realizacje/img/ecotech-thumb-big.jpg",
  },
];
---

<section class="mt-24">
  <div class="flex items-center justify-between gap-6">
    <div class="space-y-3">
      <p class="text-sm font-semibold uppercase tracking-[0.24em] text-[var(--muted)]">Realizacje</p>
      <h2 class="text-3xl font-semibold tracking-tight sm:text-4xl">Wybrane projekty</h2>
      <p class="max-w-2xl text-base text-[var(--muted)]">
        Kilka ostatnich wdrozen, ktore lacza estetyke z celami biznesowymi.
      </p>
    </div>
    <a class="hidden rounded-full border border-[var(--border)] px-4 py-2 text-sm font-semibold text-[var(--text)] transition hover:bg-black/5 sm:inline-flex" href="/realizacje/">
      Wszystkie realizacje
    </a>
  </div>
  <div class="mt-8 grid gap-6 lg:grid-cols-3">
    {works.map((work) => (
      <article class="flex flex-col gap-6 rounded-3xl border border-[var(--border)] bg-[var(--surface)] p-6 shadow-[0_18px_40px_-30px_rgba(0,0,0,0.6)]">
        <img
          class="h-84 w-full rounded-2xl border border-[var(--border)] object-cover"
          src={work.image}
          alt={work.title}
          loading="lazy"
          decoding="async"
        />
        <div class="space-y-2">
          <p class="text-xs font-semibold uppercase tracking-[0.2em] text-[var(--muted)]">{work.tag}</p>
          <h3 class="text-xl font-semibold">{work.title}</h3>
          <p class="text-sm text-[var(--muted)]">{work.year}</p>
        </div>
      </article>
    ))}
  </div>
</section>
