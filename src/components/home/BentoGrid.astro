---
import { Image } from "astro:assets";

import mobileImage from "../../assets/images/sections/bento-03-mobile-friendly.png";
import performanceImage from "../../assets/images/sections/dark-bento-03-performance2.png";
import securityImage from "../../assets/images/sections/dark-bento-03-security.png";
---

<section class="relative bg-black pb-20 pt-20 md:pb-26 md:pt-24">
  <div class="absolute inset-y-0 left-1/2 w-screen -translate-x-1/2 bg-black"></div>
      <div class="relative space-y-3 max-w-3xl mb-12">
      <p class="text-[12px] font-semibold uppercase tracking-[0.1em] text-[var(--accent)]">Standard wykonania</p>
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-semibold tracking-tight text-white">Wykorzystuję technologie, które gwarantują <span class="text-white/50"> szybkość i bezpieczeństwo dbając o każdy detal w kodzie</span></h2>
    </div>

    <div class="grid gap-4 md:grid-cols-2 md:grid-rows-2 lg:grid-cols-3 lg:grid-rows-2">
      
      {/* 1. Responsywność - Duży blok lewy */}
      <div class="relative lg:row-span-2 group">
        <div class="absolute inset-px rounded-lg bg-white/10 border border-white/5 group-hover:border-orange-500/30 transition-colors duration-300 lg:rounded-l-[2rem]"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-l-[calc(2rem+1px)]">
          <div class="px-5 pt-8 pb-3 sm:px-10 sm:pt-10">
            <p class="mt-2 text-xl font-medium tracking-tight text-white">Responsywność</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">Układ dopasowany do telefonu i tabletu, bez kompromisów w czytelności.</p>
          </div>
          <div class="relative min-h-[30rem] w-full grow [container-type:size] max-lg:mx-auto max-lg:max-w-sm">
            <div class="absolute inset-x-10 top-10 bottom-0 overflow-hidden rounded-t-[12cqw] border-x-[3cqw] border-t-[3cqw] border-neutral-800 bg-neutral-900 shadow-2xl">
              <Image
                src={mobileImage}
                alt="Podgląd strony na telefonie"
                class="size-full object-cover object-top"
                widths={[320, 480, 768]}
                sizes="(max-width: 1024px) 100vw, 420px"
              />
            </div>
          </div>
        </div>
      </div>

      {/* 2. Wydajność - Środkowy góra */}
      <div class="relative group">
        <div class="absolute inset-px rounded-lg bg-white/10 border border-white/5 group-hover:border-orange-500/30 transition-colors duration-300"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]">
          <div class="px-5 pt-8 sm:px-10 sm:pt-10">
            <p class="mt-2 text-xl font-medium tracking-tight text-white">Wydajność</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">Szybkie ładowanie i lekki front, który nie blokuje treści.</p>
          </div>
          <div class="flex flex-1 items-center justify-center px-8 max-lg:pt-10 max-lg:pb-12 sm:px-10 lg:pb-2">
            <Image
              src={performanceImage}
              alt="Wykres wydajności"
              class="w-full max-lg:max-w-xs opacity-80 group-hover:opacity-100 transition-opacity"
            />
          </div>
        </div>
      </div>

      {/* 3. Bezpieczeństwo - Środkowy dół */}
      <div class="relative group lg:col-start-2 lg:row-start-2">
        <div class="absolute inset-px rounded-lg bg-white/10 border border-white/5 group-hover:border-orange-500/30 transition-colors duration-300"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)]">
          <div class="px-5 pt-8 sm:px-10 sm:pt-10">
            <p class="mt-2 text-xl font-medium tracking-tight text-white">Bezpieczeństwo</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">Pewne wdrożenie, certyfikaty SSL i aktualne standardy bezpieczeństwa.</p>
          </div>
          <div class="flex flex-1 items-center justify-center py-4">
            <Image
              src={securityImage}
              alt="Ikona bezpieczeństwa"
              class="h-42 w-auto object-contain opacity-70 group-hover:scale-105 transition-transform duration-500"
            />
          </div>
        </div>
      </div>

      {/* 4. Solidne rozwiązania (KOD) - Duży blok prawy */}
      <div class="relative lg:row-span-2 group">
        <div class="absolute inset-px rounded-lg bg-white/10 border border-white/5 group-hover:border-orange-500/30 transition-colors duration-300 lg:rounded-r-[2rem]"></div>
        <div class="relative flex h-full flex-col overflow-hidden rounded-[calc(var(--radius-lg)+1px)] lg:rounded-r-[calc(2rem+1px)]">
          <div class="px-5 pt-8 pb-3 sm:px-10 sm:pt-10">
            <p class="mt-2 text-xl font-medium tracking-tight text-white">Solidne rozwiązania</p>
            <p class="mt-2 max-w-lg text-sm/6 text-gray-400">Stabilne integracje i czysty kod gotowy pod dalszy rozwój Twojego biznesu.</p>
          </div> 
          <div class="relative min-h-[30rem] w-full grow">
            <div class="absolute top-10 right-0 bottom-0 left-10 overflow-hidden rounded-tl-2xl border-l border-t border-white/10 bg-[#111111] shadow-2xl">
              <div class="flex border-b border-white/5 bg-white/5">
                <div class="border-r border-white/10 px-4 py-2 text-xs font-medium text-orange-400 bg-black/20">index.jsx</div>
                <div class="px-4 py-2 text-xs font-medium text-gray-500">App.jsx</div>
              </div>
              <div class="p-6 font-mono text-sm leading-relaxed">
<div class="pb-6 font-mono text-xs sm:text-sm leading-relaxed overflow-hidden">
  <span class="text-purple-400">import</span> &#123; <span class="text-blue-300">useState</span> &#125; <span class="text-purple-400">from</span> <span class="text-gray-300">"react"</span>; <br/>
  <br/>
  <span class="text-purple-400">export const</span> <span class="text-orange-600">ContactForm</span> = () <span class="text-purple-400">=&gt;</span> &#123; <br/>
  <span class="text-orange-600">useState</span>(<span class="text-gray-300">"idle"</span>); <br/>
  <br/>
  &nbsp;<span class="text-purple-400">const</span> <span class="text-orange-600">handleSubmit</span> = <span class="text-purple-400">async</span> (<span class="text-blue-300">data</span>) <span class="text-purple-400">=&gt;</span> &#123; <br/>
  &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-blue-400">setStatus</span>(<span class="text-gray-300">"loading"</span>); <br/>
  &nbsp;&nbsp;&nbsp;&nbsp;<span class="text-purple-400">await</span> <span class="text-orange-600">fetch</span>(<span class="text-gray-300">"/api/send"</span>, &#123; <br/>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-blue-300">method</span>: <span class="text-gray-300">"POST"</span>, <br/>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="text-blue-300">body</span>: <span class="text-blue-300">JSON</span>.<span class="text-orange-600">stringify</span>(<span class="text-blue-300">data</span>) <br/>
  &nbsp;&nbsp;&nbsp;&nbsp;&#125;);  
</div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>