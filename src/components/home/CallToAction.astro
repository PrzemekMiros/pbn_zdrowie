---
import { Image } from "astro:assets";
import heroImage from "../../assets/images/sections/blog-responsive.jpg";

const cta = {
  title: "Gotowy na nową stronę?",
  description: "Zadzwoń lub napisz do mnie, żeby omówić swój projekt i otrzymać wycenę.",
  button: { label: "Skontaktuj się", href: "/kontakt/" },
};
---

<section class="relative mb-20 md:mb-24 overflow-hidden rounded-2xl">
  <div class="grid grid-cols-1 lg:grid-cols-[2.1fr_1fr]">
    
    <div class="relative flex flex-col justify-center bg-black px-8 py-18 md:pb-20 md:pt-18 md:px-16 z-10">
      <div class="max-w-xl">
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-semibold leading-[1.1] tracking-tight text-white mb-6">
          {cta.title}
        </h2>
        <p class="text-gray-400 text-lg mb-8">
          {cta.description}
        </p>
        <a 
          href={cta.button.href} 
          class="w-fit rounded-full bg-[var(--accent)] px-6 py-3 text-base font-semibold text-white transition hover:brightness-95"
        >
          {cta.button.label}
        </a>
      </div>

      <div class="hidden lg:block absolute right-0 bottom-0 w-26 h-26 bg-[var(--accent)] translate-x-26 z-20"></div>
    </div>

    <div class="hidden md:block relative min-h-[250px] lg:min-h-full bg-gray-100">
      <div class="absolute inset-0 overflow-hidden">
        <Image
          src={heroImage}
          alt="CTA Background"
          class="size-full object-cover grayscale opacity-90"
          widths={[480, 768, 1024]}
          sizes="(max-width: 1024px) 100vw, 480px"
          loading="lazy"
        />
      </div>
      
      <div class="hidden lg:block absolute left-0 bottom-26 w-26 h-26 bg-white -translate-x-26 z-20"></div>
      
    </div>

  </div>
</section>
